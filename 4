#include <iostream>
#include <fstream>
#include <string>
#include <iomanip>

using namespace std;


int main( ){
    const string FILENAME = "grocery_list.txt";
    ofstream outputFile(FILENAME);

    int choice;

    string Walmart;
    string HometownMarket;
    string SamsClub;
    string orderoflist;

    do {
        cout << "Menu:\n";
        cout << "1. Wal-Mart\n";
        cout << "2. Hometown Market\n";
        cout << "3. Sam's Club\n";
        cout << "4. Done\n";
        cout << "Enter your choice: ";
        cin >> choice;
         
        if(choice=1)
        {   
            cout << "Enter five grocery items for" << choice << ":\n";
             for (int i = 0; i < 5; i++) {
                cout << "Item " << (i + 1) << ": ";
                cin >> orderoflist;}
        }

        else if(choice=2) {
            for (int i = 0; i < 5; i++) {
                cout << "Item " << (i + 1) << choice <<": ";
                cin >> orderoflist;}
        }
                
        else if(choice=3){
            for (int i = 0; i < 5; i++) {
                cout << "Item " << (i + 1) << choice << ": ";
                cin >> orderoflist;}
        }


    } while (choice >= 1 && choice <= 3);

    
}
