#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    //Part 1
    // Constants
    const double tuition_per_credit_hour = 263.00;
    const double registration_fees = 162.50;

    // User input
    string firstName;
    string lastName;
    int studentID;
    double scholarshipAmount;
    

    const int two_credit_hours = 2;
    const int three_credit_hours = 3;

    string prefix0 = "CS";
    string prefix1 = "ITE";
;
    string coursenum1 = "317";
    string coursenum2= "305";
    string coursenum3 = "306";

    string class1 = "Computer Science 1";
    string class2 = "Networking Fundamentals";
    string class3 = "Local Area Networks";


    cout <<"            ***************WELCOME TO THE SEMESTER**************" << endl;
    cout << endl;
    
    // Get user information
    cout << "Please enter your first name, followed by your last name, and your student ID " << endl;
    cout << "Do not include the A or leading 0s in your ID" << endl;
    cout << endl;
    cin >> firstName >> lastName >> studentID;
    cout << endl;
    
    //Select Classes
    int number_of_classes;
    int choice1, choice2, choice3;

    cout << "How many classes do you plan to register for? (Please enter 1, 2, or 3)" << endl;
    cin >> number_of_classes;
    cout << endl << endl;

    if (number_of_classes < 1 || number_of_classes > 3)
    {
        cout << "Invalid number of classes." << endl;

        return 0;
    }

    cout << "Choose class 1: ";
    cin >> choice1;

    switch (choice1) {
        case 1:
            cout << "You chose CS 317 - Computer Science 1" << endl;
            break;
        case 2:
            cout << "You chose ITE 305 - Networking Fundamentals" << endl;
            break;
        case 3:
            cout << "You chose ITE 306 - Local Area Networks" << endl;
            break;
        default:
            cout << "Invalid Choice" << endl;

            return 0;
    }

    cout << "Choose class 2: ";
    cin >> choice2;

    //Making sure a different class is selected
    while (choice2 == choice1) {
        cout << "You must select a different class. Choose class 2: ";
        cin >> choice2;
    }

    switch (choice2) {
        case 1:
            cout << "You chose CS 317 - Computer Science 1" << endl;
            break;
        case 2:
            cout << "You chose ITE 305 - Networking Fundamentals" << endl;
            break;
        case 3:
            cout << "You chose ITE 306 - Local Area Networks" << endl;
            break;
        default:
            cout << "Invalid Choice" << endl;

            return 0;
    }

     while (choice3 == choice1 || choice3 == choice2) {
        cout << "You must select a different class. Choose class 3: ";
        cin >> choice3;
    }
    
    switch (choice3) {
        case 1:
            cout << "You chose CS 317 - Computer Science 1" << endl;
            break;
        case 2:
            cout << "You chose ITE 305 - Networking Fundamentals" << endl;
            break;
        case 3:
            cout << "You chose ITE 306 - Local Area Networks" << endl;
            break;
        default:
            cout << "Invalid Choice" << endl;

            return 0;
    }


    // Scholarship Information
    cout << "Did you recieve a scholarship, if so please enter that amount or enter 0." << endl;
    cin >> scholarshipAmount;
    cout << endl << endl;
    
    // Confirmation statement
    cout << "Dear " << firstName << " " << lastName << " " << "("<<studentID<<")" << endl;
    cout << "Thank you for entering your information, below is your class listing and bill for the Spring 2023 semester." << endl;
    cout << endl << endl;

    //View Schedule
    // Course Details
    cout << "           **********COURSE DETAILS**********" <<endl;
    cout << "Prefix" << setw(10) << "No." << setw(10) << "Title " << setw(30) << "Credit Hour" << endl;
    cout << "**************************************************************" << endl;
    cout << prefix0 << setw(14) << coursenum1 << setw(22) << class1 << setw(14) << three_credit_hours << endl;
    cout << prefix1 << setw(13) << coursenum2 << setw(27) << class2 << setw(9) << two_credit_hours << endl;
    cout << prefix1 << setw(13) << coursenum3 << setw(23) << class3 << setw(13) << two_credit_hours << endl;
    cout << endl << endl;
    

    int totalCreditHours = three_credit_hours + two_credit_hours +two_credit_hours;
    cout << "Total Enrollement Hours:" << setw(28) << totalCreditHours << endl;
    cout << endl << endl;
    
    // Billing information
    double tuitionCost = tuition_per_credit_hour * totalCreditHours;
    double totalAmountDue = tuitionCost + registration_fees - scholarshipAmount;
    cout << fixed << setprecision(2);
    cout << " **********BILLING INFORMATION**********" << endl;
    cout << setw(11) << "Tuition" << setw(29) << tuitionCost << endl;
    cout << setw(11) << "Fees" << setw(29) << registration_fees << endl;
    cout << setw(8) << "Scholarship" << setw(29) << scholarshipAmount << endl;
    cout << endl;
    cout << "Total Due:" << setw(30) << totalAmountDue << endl;
    
    //Part 2


    //Enter Scholarship

    //View Schedule

    //View Bill

    // View Details


   return 0;
}
